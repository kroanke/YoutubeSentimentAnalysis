<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Comments Sentiment Analysis</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" type="text/css" href="~/Style.css" />
    <script src="//code.jquery.com/jquery-latest.min.js" type="text/javascript"></script>
    <script src="~/Animation.js"></script>
    <script src="~/Charts.js"></script>



</head>
<body style="background-image: url('a.jpg');
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-size: cover;">
    <div class="navbar navbar-inverse navbar-fixed-top" style="height:55px;">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                @Html.ActionLink("Comment Analysis", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav" style="font-family: 'Avantgarde'">
                    <li style="font-size:xx-large; text-align:center">@Html.ActionLink("Homepage", "Index", "Home")</li>
                    <li style="font-size:xx-large; text-align:center">@Html.ActionLink("Comments", "Index", "Comments")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        @*<footer style="margin-top:auto">
            <p>&copy; @DateTime.Now.Year - ASP.NET Uygulamam</p>
        </footer>*@
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
